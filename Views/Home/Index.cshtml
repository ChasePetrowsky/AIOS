@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        body {
            background: #f5f5f5;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 600;
            margin: 25px 20px 10px;
        }

        .newsletter-content {
            max-width: 900px; /* prevents going too far right */
            margin: 0 auto; /* centers text */
            font-size: 16px;
            line-height: 1.6;
            white-space: pre-line; /* allows wrapping AND keeps line breaks */
            word-wrap: break-word; /* forces natural wrapping */
        }


        .aios-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            margin: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            animation: fadeIn 0.3s ease-in;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn-aios {
            background-color: #4da3ff;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 18px;
            transition: 0.2s;
            font-weight: 500;
        }

            .btn-aios:hover {
                background-color: #3a8ee6;
                transform: translateY(-1px);
            }

        /* Toast System (Centered – same as Calendar) */
        .toast-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 99999;
        }

        .toast {
            min-width: 350px;
            border-radius: 8px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
        }

        .toast-success {
            border-left: 4px solid #28a745;
        }

        .toast-error {
            border-left: 4px solid #dc3545;
        }

        .toast-warning {
            border-left: 4px solid #ffc107;
        }

        /* Custom Confirm Dialog */
        .custom-confirm-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 10000;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .custom-confirm-dialog {
            background: white;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            max-width: 380px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }

        .custom-confirm-buttons button {
            padding: 10px 24px;
            border: none;
            border-radius: 6px;
            font-weight: 500;
            transition: 0.2s;
        }

        .confirm-yes {
            background: #dc3545;
            color: white;
        }

        .confirm-no {
            background: #6c757d;
            color: white;
        }
    </style>
</head>

<body>

    <!-- DELETE CONFIRM OVERLAY -->
    <div class="custom-confirm-overlay" id="confirmOverlay">
        <div class="custom-confirm-dialog">
            <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size:3rem;"></i>
            <h5 class="mt-3">Are you sure?</h5>
            <p>This action cannot be undone.</p>

            <div class="custom-confirm-buttons d-flex gap-2 justify-content-center mt-3">
                <button class="confirm-no" id="confirmNo">Cancel</button>
                <button class="confirm-yes" id="confirmYes">Delete</button>
            </div>
        </div>
    </div>

    <!-- TOASTS -->
    <div class="toast-container">

        <div id="successToast" class="toast toast-success">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    <span id="successMessage"></span>
                </div>
                <button class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>

        <div id="errorToast" class="toast toast-error">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-circle-fill text-danger me-2"></i>
                    <span id="errorMessage"></span>
                </div>
                <button class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>

        <div id="warningToast" class="toast toast-warning">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                    <span id="warningMessage"></span>
                </div>
                <button class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>

    </div>

    <h2 class="page-title">Dashboard</h2>

    <div class="container-fluid">
        <div class="row">

            <!-- FULL-WIDTH EMPLOYEE NEWSLETTER -->
            <div class="container-fluid">
                <div class="aios-card">
                    <h4 class="fw-bold mb-3"><i class="bi bi-newspaper"></i> Employee Newsletter</h4>

                    <div id="newsletterSection" class="newsletter-content"></div>
                    </div>

                    <button class="btn-aios mt-3" data-bs-toggle="modal" data-bs-target="#addNewsletterModal">
                        <i class="bi bi-plus-circle"></i> Add Newsletter
                    </button>
                </div>
            </div>

        </div>
    </div>

    <!-- ADD NEWSLETTER MODAL -->
    <div class="modal fade" id="addNewsletterModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Publish Newsletter</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="newsletterForm">
                        <label class="fw-bold">Title *</label>
                        <input id="newsletterTitle" class="form-control mb-3" />

                        <label class="fw-bold">Content *</label>
                        <textarea id="newsletterContent" class="form-control" rows="6"></textarea>
                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn-aios" onclick="saveNewsletter()">
                        <i class="bi bi-save"></i> Publish
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        /* TOAST */
        function showToast(type, message) {
            const toastEl = document.getElementById(type + "Toast");
            const msgEl = document.getElementById(type + "Message");
            msgEl.textContent = message;

            const toast = new bootstrap.Toast(toastEl, {
                delay: 2000,
                autohide: true
            });

            toast.show();
        }

        const showSuccess = msg => showToast("success", msg);
        const showError = msg => showToast("error", msg);
        const showWarning = msg => showToast("warning", msg);

        /* CONFIRM DELETE BOX */
        function confirmDelete() {
            return new Promise(resolve => {
                const overlay = confirmOverlay;
                overlay.style.display = "flex";

                const yes = () => finish(true);
                const no = () => finish(false);

                confirmYes.addEventListener("click", yes);
                confirmNo.addEventListener("click", no);

                function finish(result) {
                    overlay.style.display = "none";
                    confirmYes.removeEventListener("click", yes);
                    confirmNo.removeEventListener("click", no);
                    resolve(result);
                }
            });
        }

        /* NEWSLETTER API */
        const NEWSLETTER_API = "https://localhost:7123/api/newsletter";

        async function loadLatestNewsletter() {
            try {
                const res = await fetch(`${NEWSLETTER_API}/latest`);
                const data = await res.json();

                if (!data) {
                    newsletterSection.innerHTML =
                        `<p class="text-muted">No newsletters published yet.</p>`;
                    return;
                }

                newsletterSection.innerHTML = `
                    <h5>${data.title}</h5>
                    <p class="text-muted" style="font-size:14px;">
                        Published ${new Date(data.publishedOn).toLocaleDateString()}
                    </p>
        <p style="white-space: pre-line; font-size: 16px;">${data.content}</p>
                        `;
            }
            catch {
                newsletterSection.innerHTML =
                    `<p class="text-danger">Failed to load newsletter.</p>`;
            }
        }

        async function saveNewsletter() {
            const title = newsletterTitle.value.trim();
            const content = newsletterContent.value.trim();

            if (!title || !content) {
                showWarning("Please fill all fields.");
                return;
            }

            try {
                const res = await fetch(NEWSLETTER_API, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ title, content })
                });

                if (!res.ok) throw new Error();

                bootstrap.Modal.getInstance(addNewsletterModal).hide();
                newsletterForm.reset();

                loadLatestNewsletter();
                showSuccess("Newsletter published!");
            }
            catch {
                showError("Failed to publish newsletter.");
            }
        }

        /* ON PAGE LOAD */
        document.addEventListener("DOMContentLoaded", () => {
            loadLatestNewsletter();
        });
    </script>

</body>
</html>
