@model AIOS.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<h2 class="page-title">Vehicle Details</h2>

<div class="aios-card fade-in modern-card">

    <div class="photo-box">
        <img src="@Model.PhotoUrl" class="vehicle-photo" />
    </div>

    <h3 class="vehicle-title">@Model.Year @Model.Make @Model.Model</h3>

    <div class="vehicle-info">
        <p><strong>KMs:</strong> @Model.Kms.ToString("N0")</p>
        <p><strong>VIN:</strong> @Model.VIN</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>

    <div class="button-row">
        <a href="/Inventory/Edit/@Model.Id" class="modern-btn">Edit</a>
        <a href="/Inventory/Delete/@Model.Id" class="modern-btn-secondary delete-btn">Delete</a>
        <a href="/Inventory" class="modern-btn-secondary">Back</a>
    </div>

</div>

<style>
    .modern-card {
        padding: 30px;
        border-radius: 18px;
        background: #ffffff;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #e6e6e6;
        width: 100%;
        max-width: 700px;
        margin: 0 auto 40px auto;
        text-align: center;
    }

    .vehicle-photo {
        width: 320px;
        height: 220px;
        object-fit: cover;
        border-radius: 14px;
        border: 1px solid #dcdcdc;
        margin-bottom: 20px;
    }

    .vehicle-title {
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #2c3e50;
    }

    .vehicle-info {
        margin-bottom: 25px;
        text-align: left;
        display: inline-block;
        font-size: 1.1rem;
    }

        .vehicle-info p {
            margin: 6px 0;
        }

    .button-row {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 20px;
    }

    .modern-btn {
        padding: 12px 22px;
        border-radius: 10px;
        border: none;
        background: linear-gradient(135deg, #4c8bf5, #1c5ed6);
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.25s ease;
        text-decoration: none;
        display: inline-block;
    }

        .modern-btn:hover {
            background: linear-gradient(135deg, #5ea0ff, #2d6ff0);
            transform: translateY(-2px);
            box-shadow: 0 5px 12px rgba(70, 130, 240, 0.3);
        }

    .modern-btn-secondary {
        padding: 12px 22px;
        border-radius: 10px;
        background: #f4f4f4;
        border: 1px solid #c8c8c8;
        color: #444;
        font-weight: 600;
        text-decoration: none;
        transition: 0.25s ease;
        display: inline-block;
    }

        .modern-btn-secondary:hover {
            background: #ededed;
            border-color: #999;
            transform: translateY(-2px);
        }

    .delete-btn {
        color: red !important;
        border-color: red !important;
    }

    @@media (max-width: 700px) {
        .vehicle-photo {
            width: 100%;
            height: auto;
        }

        .vehicle-info {
            width: 100%;
        }

        .button-row {
            flex-direction: column;
        }
    }
</style>
