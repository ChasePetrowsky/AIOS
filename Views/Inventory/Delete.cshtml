@model AIOS.Models.Vehicle

<h2 class="page-title">Delete Vehicle</h2>

<div class="aios-card fade-in modern-card">

    <h3>Are you sure you want to delete this vehicle?</h3>

    <p><strong>@Model.Year @Model.Make @Model.Model</strong></p>
    <p><strong>VIN:</strong> @Model.VIN</p>

    <img src="@Model.PhotoUrl" style="width:200px;border-radius:10px;object-fit:cover;" />

    <form asp-action="DeleteConfirmed" asp-controller="Inventory" method="post" class="mt-3">
        <input type="hidden" name="id" value="@Model.Id" />

        <button type="submit" class="modern-btn" style="background:red;">Confirm Delete</button>
        <a href="/Inventory/Details/@Model.Id" class="modern-btn-secondary">Cancel</a>
    </form>

</div>
